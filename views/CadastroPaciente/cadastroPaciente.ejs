<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro Paciente - Patient Control</title>
    <link rel="stylesheet" href="/css/cadastroPaciente.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=add_photo_alternate" />
</head>
<body>

<%- include('../partials/header') %>

<div class="layout">
    <%- include('../partials/aside') %>

    <div class="principal">
        <div class="container-cadastro">
            <form action="" class="form-cadastro" enctype="multipart/form-data">

                <div class="input-group-image">
                    <label for="image" id="drop-area">
                        <input type="file" name="image" accept="image/*" id="image" hidden>

                        <div id="image-view">
                            <div id="occult-input">
                                <span class="material-symbols-outlined icon"> add_photo_alternate </span>
                                <p>Selecione uma imagem</p>
                            </div>
                        </div>

                    </label>
                </div>

                <div class="input-group">
                    <label for="nome">Nome:</label>
                    <input type="text" id="input-nome" name="nome" required>
                </div>

                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="input-email" name="email" required>
                </div>

                <div class="linha-insert">
                    <div class="input-group">
                        <label for="dt-nasc">Data de Nascimento:</label>
                        <input type="date" id="input-dt-nasc" name="data_nascimento" required>
                    </div>

                    <div class="input-group">
                        <label for="cpf">CPF:</label>
                        <input type="text" id="input-cpf" name="cpf" required placeholder="000.000.000-00" maxlength="14">
                    </div>

                    <div class="input-group">
                        <label for="telefone">Telefone:</label>
                        <input type="tel" id="input-telefone" name="telefone" required placeholder="(00) 00000-0000" maxlength="15">
                    </div>
                </div>

                <div class="text-area-container">
                    <div class="input-group">
                        <label for="hpp">HPP (Histórico Patológico Pregresso):</label>
                        <textarea name="hpp" id="hpp" rows="4" style="width: 97.6%;"></textarea>
                    </div>

                    <div class="input-group">
                        <label for="hma">HMA (História da Moléstia Atual):</label>
                        <textarea name="hma" id="hma" rows="4" style="width: 97.6%;"></textarea>
                    </div>

                    <div class="input-group">
                        <label for="diag-clinic">Diagnóstico Clínico:</label>
                        <textarea name="diag-clinic" id="diag-clinic" rows="4" style="width: 97.6%;"></textarea>
                    </div>

                    <div class="input-group">
                        <label for="diag-fisio">Diagnóstico Fisioterapêutico:</label>
                        <textarea name="diag-fisio" id="diag-fisio" rows="4" style="width: 97.6%;"></textarea>
                    </div>

                    <div class="input-group">
                        <label for="obs">Observações:</label>
                        <textarea name="obs" id="obs" rows="4" style="width: 97.6%;"></textarea>
                    </div>

                    <div class="input-group">
                        <label for="medicines">Medicamentos:</label>
                        <textarea name="medicines" id="medicines" rows="4" style="width: 97.6%;"></textarea>
                    </div>

                    <div class="btn-group">
                        <button type="reset" class="btn-cancel">Cancelar</button>
                        <button type="submit" class="btn-save">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="js/cadastroPaciente.js"></script>
</body>
</html>
