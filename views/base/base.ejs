<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Patient Control</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

<header id="header">
    <h1>Patient Control</h1>
</header>

<div class="layout">
    <aside id="sidebar">
        <div class="profile">
            <img src="/img/img.png" alt="Foto de perfil de Leandro" class="profile-pic">
            <p class="profile-name">Leandro</p>
        </div>

        <nav class="nav">
            <a href="/cadastroPaciente" class="nav-link">Cadastro Paciente</a>
            <a href="#" class="nav-link">Relatórios</a>
            <a href="#" class="nav-link">Consultas</a>
            <a href="/listagemPaciente" class="nav-link">Listar Pacientes</a>
        </nav>
    </aside>

    <main id="main-content">
        <section class="daily-summary">
            <h2>Resumo do dia</h2>
            <div class="carousel-container">
                <button class="carousel-prev">←</button>
                <div class="carousel-track" id="resumo-dia"></div>
                <button class="carousel-next">→</button>
            </div>
        </section>

        <section class="calendar">
            <div class="calendar-header">
                <button id="prev-month">←</button>
                <h2 id="month-year"></h2>
                <button id="next-month">→</button>
            </div>
            <div class="weekdays" id="weekdays"></div>
            <div class="month" id="calendar-days"></div>
        </section>

        <!-- Pop-up de Novo Agendamento -->
        <div id="appointment-popup" class="popup hidden">
            <div class="popup-content">
                <span class="close-popup">&times;</span>
                <h2>Agendar Atendimento</h2>
                <form id="appointment-form">
                    <!-- Campo oculto para armazenar o ID do paciente selecionado -->
                    <input type="hidden" id="appointment-patient-id" name="id_pessoa">

                    <!-- Data do agendamento (somente leitura) -->
                    <label for="appointment-date">Data:</label>
                    <input type="text" id="appointment-date" name="date" readonly>

                    <!-- Hora do agendamento -->
                    <label for="appointment-time">Horário:</label>
                    <input type="time" id="appointment-time" name="time" required>

                    <!-- Nome do paciente (autocomplete para sugestão) -->
                    <div class="field_login">
                        <label for="appointment-name">Nome do Paciente:</label>
                        <input type="text" id="appointment-name" name="name" autocomplete="off">
                        <div id="name-suggestions" class="suggestions-box"></div>
                    </div>

                    <!-- Serviço (autocomplete para sugestão) -->
                    <div class="field_login">
                        <label for="appointment-service">Serviço:</label>
                        <input type="text" id="appointment-service" name="service" autocomplete="off">
                        <div id="service-suggestions" class="suggestions-box"></div>
                    </div>

                    <!-- Contêiner para serviços selecionados -->
                    <div id="services-container"></div>

                    <!-- Campo de preço -->
                    <div class="field_login">
                        <label for="appointment-price">Preço:</label>
                        <input type="number" id="appointment-price" name="preco" step="0.01" required> <!-- Adicionando o campo de preço -->
                    </div>

                    <!-- Botão para submeter o formulário -->
                    <button type="submit">Agendar</button>
                </form>
            </div>
        </div>

        <!-- Pop-up de Ver Agendamentos -->
        <div id="view-appointments-popup" class="popup hidden">
            <div class="popup-content large-popup">
                <span class="close-popup">&times;</span>
                <h2>Agendamentos do Dia</h2>
                <div id="appointments-list"></div>
            </div>
        </div>

        <!-- Pop-up Inicial de Escolha -->
        <div id="options-popup" class="popup hidden">
            <div class="popup-content">
                <span class="close-popup">&times;</span>
                <h2>Escolha uma Opção</h2>
                <button id="view-appointments-button">Ver Agendamentos</button>
                <button id="new-appointment-button">Novo Agendamento</button>
            </div>
        </div>

    </main>
</div>

<script src="/js/base.js"></script>
</body>
</html>